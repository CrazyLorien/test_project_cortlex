@model System.Collections.Generic.List<TestAuthProject.Models.ApplicationUser>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Managed users table</title>
</head>
<body>
<div class="row">
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Logout</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td><button onclick="logoutUser('@user.Id')">Logout</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var logoutUser = function(id) {
        $.get('/TestTask/LogoutUser/' + id,
            function() {
                alert('user was successfully logged out');
            }).fail(function() {
            alert("error");
        });
    }   
</script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}